{
  "name": "software3-enhanced",
  "displayName": "Software3 Enhanced",
  "description": "Enhanced language support for Software 3 (.s3) files with FontAwesome icons, automatic language detection, and VS Code-style syntax highlighting",
  "version": "1.2.1",
  "publisher": "lakshman-turlapati",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "s3",
    "software3",
    "documentation",
    "dual-view",
    "literate-programming"
  ],
  "icon": "media/s3-icon.png",
  "galleryBanner": {
    "color": "#1e2327",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LakshmanTurlapati/Software-3.0.git"
  },
  "bugs": {
    "url": "https://github.com/LakshmanTurlapati/Software-3.0/issues"
  },
  "homepage": "https://github.com/LakshmanTurlapati/Software-3.0#readme",
  "license": "MIT",
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "software3.export.html",
        "title": "Export to HTML",
        "category": "Software3",
        "icon": "$(export)"
      },
      {
        "command": "software3.export.markdown",
        "title": "Export to Markdown",
        "category": "Software3",
        "icon": "$(markdown)"
      },
      {
        "command": "software3.validate",
        "title": "Validate Document",
        "category": "Software3",
        "icon": "$(check)"
      },
      {
        "command": "software3.stats",
        "title": "Show Document Statistics",
        "category": "Software3",
        "icon": "$(graph)"
      },
      {
        "command": "software3.create",
        "title": "Create New Software3 Document",
        "category": "Software3",
        "icon": "$(new-file)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "software3.export.html",
          "when": "resourceExtname == .s3",
          "group": "export"
        },
        {
          "command": "software3.export.markdown",
          "when": "resourceExtname == .s3",
          "group": "export"
        }
      ],
      "editor/context": [
        {
          "command": "software3.validate",
          "when": "resourceExtname == .s3",
          "group": "software3"
        },
        {
          "command": "software3.stats",
          "when": "resourceExtname == .s3",
          "group": "software3"
        }
      ],
      "commandPalette": [
        {
          "command": "software3.export.html",
          "when": "resourceExtname == .s3"
        },
        {
          "command": "software3.export.markdown",
          "when": "resourceExtname == .s3"
        },
        {
          "command": "software3.validate",
          "when": "resourceExtname == .s3"
        },
        {
          "command": "software3.stats",
          "when": "resourceExtname == .s3"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "software3.editor",
        "displayName": "Software3 Document",
        "selector": [
          {
            "filenamePattern": "*.s3"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "software3",
        "extensions": [
          ".s3"
        ],
        "aliases": [
          "Software3",
          "S3",
          "software3"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./media/s3-icon.svg",
          "dark": "./media/s3-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "software3",
        "scopeName": "source.s3",
        "path": "./syntaxes/s3.tmLanguage.json"
      },
      {
        "scopeName": "s3.instructions.injection",
        "path": "./syntaxes/s3-instructions.injection.json",
        "injectTo": ["source.s3"],
        "embeddedLanguages": {
          "meta.embedded.block.s3-instructions": "markdown"
        },
        "tokenTypes": {
          "meta.embedded.block.s3-instructions": "other"
        }
      },
      {
        "scopeName": "s3.code.injection",
        "path": "./syntaxes/s3-code.injection.json",
        "injectTo": ["source.s3"],
        "embeddedLanguages": {
          "meta.embedded.block.s3-code-javascript": "javascript"
        },
        "tokenTypes": {
          "meta.embedded.block.s3-code-javascript": "other"
        }
      },
      {
        "scopeName": "s3.code.python.injection",
        "path": "./syntaxes/s3-code-python.injection.json",
        "injectTo": ["source.s3"],
        "embeddedLanguages": {
          "meta.embedded.block.s3-code-python": "python"
        },
        "tokenTypes": {
          "meta.embedded.block.s3-code-python": "other"
        }
      },
      {
        "scopeName": "s3.code.typescript.injection",
        "path": "./syntaxes/s3-code-typescript.injection.json",
        "injectTo": ["source.s3"],
        "embeddedLanguages": {
          "meta.embedded.block.s3-code-typescript": "typescript"
        },
        "tokenTypes": {
          "meta.embedded.block.s3-code-typescript": "other"
        }
      },
      {
        "scopeName": "s3.code.go.injection",
        "path": "./syntaxes/s3-code-go.injection.json",
        "injectTo": ["source.s3"],
        "embeddedLanguages": {
          "meta.embedded.block.s3-code-go": "go"
        },
        "tokenTypes": {
          "meta.embedded.block.s3-code-go": "other"
        }
      },
      {
        "scopeName": "s3.code.rust.injection",
        "path": "./syntaxes/s3-code-rust.injection.json",
        "injectTo": ["source.s3"],
        "embeddedLanguages": {
          "meta.embedded.block.s3-code-rust": "rust"
        },
        "tokenTypes": {
          "meta.embedded.block.s3-code-rust": "other"
        }
      }
    ],
    "configuration": {
      "title": "Software3",
      "properties": {
        "software3.preview.theme": {
          "type": "string",
          "enum": [
            "light",
            "dark",
            "auto"
          ],
          "default": "auto",
          "description": "Theme for Software3 preview"
        },
        "software3.preview.defaultView": {
          "type": "string",
          "enum": [
            "text",
            "code"
          ],
          "default": "text",
          "description": "Default view for blocks in preview"
        },
        "software3.preview.syntaxHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Enable syntax highlighting in code blocks"
        },
        "software3.syntaxHighlighting.engine": {
          "type": "string",
          "enum": [
            "vscode",
            "prism",
            "regex"
          ],
          "default": "vscode",
          "description": "Syntax highlighting engine: vscode (VS Code API), prism (Prism.js), or regex (fallback)"
        },
        "software3.syntaxHighlighting.theme": {
          "type": "string",
          "enum": [
            "auto",
            "vs",
            "vs-dark",
            "github",
            "dracula",
            "monokai"
          ],
          "default": "auto",
          "description": "Syntax highlighting theme (only applies to Prism.js engine)"
        },
        "software3.validation.strict": {
          "type": "boolean",
          "default": true,
          "description": "Use strict validation for .s3 files"
        },
        "software3.export.includeMetadata": {
          "type": "boolean",
          "default": true,
          "description": "Include metadata when exporting documents"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "typescript": "^5.1.6"
  }
}
