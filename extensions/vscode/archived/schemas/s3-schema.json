{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://software3-format.org/schema/v1.0/s3-document.json",
  "title": "Software 3 (.s3) Document Schema",
  "description": "JSON Schema for validating Software 3 format documents",
  "type": "object",
  "required": ["version", "title", "blocks"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^1\\.(0|[1-9]\\d*)$",
      "description": "Format version (currently 1.x)"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Document title"
    },
    "metadata": {
      "$ref": "#/definitions/documentMetadata"
    },
    "blocks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/block"
      },
      "description": "Array of content blocks"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "documentMetadata": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string",
          "maxLength": 100,
          "description": "Document author"
        },
        "created": {
          "type": "string",
          "format": "date",
          "description": "Creation date in ISO 8601 format"
        },
        "modified": {
          "type": "string",
          "format": "date",
          "description": "Last modification date in ISO 8601 format"
        },
        "description": {
          "type": "string",
          "maxLength": 500,
          "description": "Brief document description"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "uniqueItems": true,
          "description": "Document tags for categorization"
        },
        "version": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
          "description": "Document version (semantic versioning)"
        },
        "license": {
          "type": "string",
          "maxLength": 50,
          "description": "License identifier"
        },
        "language": {
          "type": "string",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
          "description": "Primary language (ISO 639-1)"
        },
        "category": {
          "type": "string",
          "enum": ["tutorial", "documentation", "specification", "example", "reference", "guide", "api", "other"],
          "description": "Document category"
        }
      },
      "additionalProperties": false
    },
    "block": {
      "type": "object",
      "required": ["id", "text", "code", "language"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9-_]+$",
          "minLength": 1,
          "maxLength": 100,
          "description": "Unique block identifier"
        },
        "text": {
          "type": "string",
          "minLength": 1,
          "description": "Markdown-formatted text content"
        },
        "code": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1,
              "description": "Source code content"
            },
            {
              "type": "object",
              "patternProperties": {
                "^[a-zA-Z0-9-_]+$": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "additionalProperties": false,
              "description": "Multi-language code object"
            }
          ]
        },
        "language": {
          "type": "string",
          "enum": [
            "javascript", "typescript", "python", "java", "csharp", "cpp", "c",
            "go", "rust", "php", "ruby", "swift", "kotlin", "scala",
            "html", "css", "sql", "bash", "powershell", "yaml", "json",
            "dockerfile", "terraform", "nginx", "apache", "xml", "markdown",
            "plaintext", "multi", "other"
          ],
          "description": "Programming language identifier"
        },
        "metadata": {
          "$ref": "#/definitions/blockMetadata"
        }
      },
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "language": { "const": "multi" }
            }
          },
          "then": {
            "properties": {
              "code": {
                "type": "object"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "language": { "not": { "const": "multi" } }
            }
          },
          "then": {
            "properties": {
              "code": {
                "type": "string"
              }
            }
          }
        }
      ]
    },
    "blockMetadata": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "uniqueItems": true,
          "description": "Block tags for filtering"
        },
        "complexity": {
          "type": "string",
          "enum": ["beginner", "intermediate", "advanced"],
          "description": "Complexity level"
        },
        "executionTime": {
          "type": "string",
          "maxLength": 50,
          "description": "Expected execution time"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "uniqueItems": true,
          "description": "Required dependencies"
        },
        "outputs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["text", "json", "xml", "html", "image", "binary"]
              },
              "description": {
                "type": "string",
                "maxLength": 200
              },
              "schema": {
                "type": "object",
                "description": "JSON Schema for expected output"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          "description": "Expected outputs for validation"
        },
        "hidden": {
          "type": "boolean",
          "default": false,
          "description": "Whether block is hidden by default"
        },
        "readonly": {
          "type": "boolean",
          "default": false,
          "description": "Whether code is read-only"
        },
        "executable": {
          "type": "boolean",
          "default": false,
          "description": "Whether code can be executed"
        },
        "environment": {
          "type": "string",
          "enum": ["nodejs", "python", "browser", "shell", "docker", "other"],
          "description": "Execution environment"
        },
        "defaultLanguage": {
          "type": "string",
          "description": "Default language for multi-language blocks"
        },
        "importType": {
          "type": "string",
          "enum": ["file", "url", "snippet"],
          "description": "Type of import reference"
        },
        "importPath": {
          "type": "string",
          "maxLength": 500,
          "description": "Import file path or URL"
        },
        "expectedOutput": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["text", "json", "xml", "html", "image", "binary"]
            },
            "schema": {
              "type": "object",
              "description": "JSON Schema for expected output"
            },
            "example": {
              "description": "Example output"
            }
          },
          "required": ["type"],
          "additionalProperties": false,
          "description": "Expected output specification"
        }
      },
      "additionalProperties": false
    }
  }
} 